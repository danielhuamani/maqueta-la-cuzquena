                                    input(type="text",placeholder="Nombre*",name="nombre")
                                    input(type="text",placeholder="Teléfono*",name="telefono")
                                    input(type="text",placeholder="Correo*",name="correo")
                                    textarea(placeholder="Mensaje*",name="mensaje")
                                    p *campos obligatorio.
                                    button(type="submit",value="Enviar",class="right-button") Enviar 
                                        img(src="../../static/img/submit-arrow-0.png", alt="" class="only-normal")
                                        img(src="../../static/img/submit-arrow-1.png", alt="" class="only-hover")
    .map-site
        .map
            #gmap_canvas
            a(href="https://embedmaps.org/")

block js
    script(src="../../static/js/jquery.validate.min.js")
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyD2YPlowqtNtgh1HXzSJStZ39kLCrzQ0GY")
    script(src="https://embedmaps.com/google-maps-authorization/script.js?id=3aabe127d1872c5bcd44e90cdc5ea241b5d309d0")
    script().
        $(document).ready(function(){
            console.log("start the party!");
            var $map = $(".map");
            if ($map.length>=1) {
                function init_map()
                {
                console.log("on the party!");var myOptions = {zoom:16,center:new google.maps.LatLng(-10.674011535798538,-77.81844290305844),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(-10.674011535798538,-77.81844290305844)});infowindow = new google.maps.InfoWindow({content:'<strong>Custom place</strong><br>Jr libertad 137<br> Lima<br>'});google.maps.event.addListener(marker, 'click', function(){infowindow.open(map,marker);});infowindow.open(map,marker);}
                google.maps.event.addDomListener(window, 'load', init_map);
            };

            $(".form-contact").validate({
                rules: {
                    nombre: "required",
                    telefono: {
