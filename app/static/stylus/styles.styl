
@import 'nib'
@import 'fonts'
@import 'normalize.styl'
@import 'base.styl'
@import 'header-footer.styl'

//colores
c-azul = #1f2f79
c-amarillo = #fcb61f
c-black = #000
c-white = #ffffff
c-plomo = #828281
c-gris = #6f6f6e
c-blanco = #ffffff
c-plomo-claro = #ebebeb
c-plomo-sombra = #c5c5c4
c-light = #ebebeb

@import 'nosotros.styl'
@import 'contacto.styl'

//fuente

semibold = 'proxima_novasemibold';
regular = 'proxima_nova_rgregular';
italic = 'proxima_novalight_italic';
extbold = 'proxima_novaextrabold';
bold = 'proxima_nova_rgbold';



section.banner
    .bx-viewport
        height 360px !important
    .bx-wrapper
        position relative
        .bx-pager.bx-default-pager

            position absolute
            bottom 20px
            z-index 200
            left 0
            right -910px
            width 15px
            margin auto

            a
                position relative
                text-indent -99999px
                outline 0
                display inline-block

                width 18px
                height 18px
                border 1px solid transparent
                border-radius 50%
                margin 2px 0px
                &:after
                    content ""
                    position absolute
                    width 12px
                    height 12px
                    right 0
                    left 0
                    top 3px
                    background-color c-black
                    margin auto
                    border-radius 50%
            a.active
                border-color #fff
                &:after
                    background white
    .container-slider
        height 100%
        .slider
            height 100%
            margin-right 40%
            background-size cover
            background-position-x -70px
            font-size 0
            figure
                display inline-block
                vertical-align top
                width 70%
                img
                    width 100%
            .content
                height 100%
                display inline-block
                vertical-align top
                float right
                background c-amarillo
                width 48%
                padding-top 40px
                padding-bottom 20px
                box-sizing border-box
                position relative
                &:after
                    content ""
                    width 0
                    height 0
                    border-top 360px solid c-amarillo
                    border-left 50px solid transparent
                    position absolute
                    right 100%
                    top 0px
                .container-text
                    max-width 380px
                    text-align right
                    overflow hidden
                    .title
                        font-size 50px
                        color white
                        font-family bold
                    .sub-title
                        font-size 50px
                        font-family italic
                    .text
                        max-width 320px
                        float right
                        font-size 15px
                        font-family regular
                        color c-black

section.info-pages
    margin-top 45px
    margin-bottom 75px
    .container
        display flex
        justify-content space-between
        .page:first-child
            margin-left 0px !important
        .page:last-child
            margin-right 0px !important
        .page
            margin 0px 5px
            text-align center
            h3
                font-family bold
                font-size 20px
                color c-azul
            .text
                font-family regular
                font-size 14px
                color c-plomo
                margin-top 15px
                margin-bottom 15px
            a
                font-size 15px
                font-family bold
                color white
                background c-azul
                padding 5px 12px
                border-radius 12px
                transition 0.2s ease all
                &:hover
                    background c-amarillo

section.servicio-ventas
    margin-bottom 50px
    .container
        display flex
        justify-content space-between
        .servicio
            background-image url("../img/fondo-servicio.png")
        .ventas
            background-image url("../img/fondo-ventas.png")
        .item
            width 49%
            background-size cover
            padding 22px 10px 22px 15px
            box-sizing border-box
            position relative
            figure
                position absolute
                bottom -22px
                right 15px
                display inline-block
                vertical-align top
                img
                    display block
                    max-width 100%
                    height auto
            .text
                width 300px
                display inline-block
                vertical-align top
                h3
                    font-size 32px
                    font-family regular
                    color white
                    margin-bottom 0px
                h4
                    font-size 32px
                    font-family bold
                    color white
                    margin-bottom 0px


//Map styles
.map
    height: 400px
    overflow: hidden
    margin: auto
    #gmap_canvas 
        height: 400px
        width: 100%
        visibility visible!important
        img
            max-width none!important
            background none!important
        
section.contacto-empresa
    padding-top 30px
    background-color c-plomo-claro
    .container
        display flex
        figure
            margin-bottom 0px
            margin-top -10px

            img
                display block
        .formulario
            .text
                color c-plomo
                font-size 14px
                font-family regular
                margin-bottom 15px
            h2
                font-family bold
                font-size 25px
                color c-amarillo
                span
                    font-family bold
                    font-size 22px
                    color c-azul
            form

                .cnt-input
                    display inline-block
                    .input:first-child
                        margin-top 0px
                    .input
                        margin-top 8px
                        input
                            height 35px
                            box-shadow 3px 4px 0px c-plomo-sombra
                            font-size 14px
                            font-family regular
                            border none
                            width 320px
                            border-radius 15px
                            box-sizing box-sizing
                            padding-left 8px
                        textarea
                            box-shadow 3px 4px 0px c-plomo-sombra
                            font-size 14px
                            font-family regular
                            border none
                            width 320px
                            border-radius 15px
                            box-sizing box-sizing
                            padding-left 8px
                            padding-top 8px
                            height 100px
                .button
                    display inline-block
                    vertical-align bottom
                    margin-left 10px
                    button
                        border none

                        background c-amarillo
                        color c-azul
                        font-size 15px
                        padding 5px 15px
                        border-radius 12px
                        font-family bold
                        transition 0.2s ease all
                        &:hover
                            color c-blanco
                            background c-azul

