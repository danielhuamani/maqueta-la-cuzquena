@import 'nib'
@import 'fonts'
@import 'normalize.styl'
@import 'base.styl'
@import 'header-footer.styl'
//colores
c-azul = #1f2f79
c-amarillo = #fcb61f
c-black = #000
//fuente

semibold = 'proxima_novasemibold';
regular = 'proxima_nova_rgregular';
italic = 'proxima_novalight_italic';
extbold = 'proxima_novaextrabold';
bold = 'proxima_nova_rgbold';



section.banner
    .bx-viewport
        height 360px !important
    .bx-wrapper
        position relative
        .bx-pager.bx-default-pager

            position absolute
            bottom 20px
            z-index 200
            left 0
            right -910px
            width 15px
            margin auto

            a
                position relative
                text-indent -99999px
                outline 0
                display inline-block

                width 18px
                height 18px
                border 1px solid transparent
                border-radius 50%
                margin 2px 0px
                &:after
                    content ""
                    position absolute
                    width 12px
                    height 12px
                    right 0
                    left 0
                    top 3px
                    background-color c-black
                    margin auto
                    border-radius 50%
            a.active
                border-color #fff
                &:after
                    background white
    .container-slider
        height 100%
        .slider
            height 100%
            margin-right 40%
            background-size cover
            background-position-x -70px
            font-size 0
            figure
                display inline-block
                vertical-align top
                width 70%
                img
                    width 100%
            .content
                height 100%
                display inline-block
                vertical-align top
                float right
                background c-amarillo
                width 48%
                padding-top 40px
                padding-bottom 20px
                box-sizing border-box
                position relative
                &:after
                    content ""
                    width 0
                    height 0
                    border-top 360px solid c-amarillo
                    border-left 50px solid transparent
                    position absolute
                    right 100%
                    top 0px
                .container-text
                    max-width 380px
                    text-align right
                    overflow hidden
                    .title
                        font-size 50px
                        color white
                        font-family bold
                    .sub-title
                        font-size 50px
                        font-family italic
                    .text
                        max-width 320px
                        float right
                        font-size 15px
                        font-family regular
                        color c-black

