
//Nosotros

section.servicio-ventas
    margin-bottom 50px
    .container
        display flex
        justify-content space-between
        .servicio
            background-image url("../img/fondo-servicio.png")
        .ventas
            background-image url("../img/fondo-ventas.png")
        .item
            width 49%
            background-size cover
            padding 22px 10px 22px 15px
            box-sizing border-box
            position relative
            figure
                position absolute
                bottom -22px
                right 15px
                display inline-block
                vertical-align top
                img
                    display block
                    max-width 100%
                    height auto
            .text
                width 300px
                display inline-block
                vertical-align top
                h3
                    font-size 32px
                    font-family regular
                    color white
                    margin-bottom 0px
                h4
                    font-size 32px
                    font-family bold
                    color white
                    margin-bottom 0px
                    
section.banner-page
    background c-amarillo
    position relative
    .detail-banner
        width 100%
        height 9px
        background-image url("../img/detail-square.png")
        position absolute
        bottom -4px
        left 0px
        z-index 9
    .banner-image
        position relative
        display flex
        justify-content space-between
        &:after
            content: "";
            width: 0;
            height: 0;
            border-top: 212px solid #fcb61f;
            border-left: 50px solid transparent;
            position: absolute;
            right: -1px;
            top: 0;
        &:before
            content: "";
            width: 0;
            height: 0;
            border-bottom: 212px solid #fcb61f;
            border-right: 50px solid transparent;
            position: absolute;
            left: -1px;
            top: 0;
    .about-us
        .container
            display flex
            justify-content space-between
            overflow auto

section.info-pages
    .about-us
        padding 0 0 50px 0
        .text-section
            text-align left
            .main-title
                color c-azul
                font-size 35px
                font-family: semibold
            .text-yellow
                color c-amarillo
                font-size 16px
                font-family: regular
            .text
                font-family: regular
                font-size 14px
                color c-gris
        .image-section
            padding: 0 0 0 30px;
            min-width 45%
    .content-our-values
        .value
            text-align center
            padding: 20px 10px
            .line-yellow
                background-color c-amarillo
                height 3px
                width 95%
                margin auto
                display inline-block
            .title-value
                color c-azul
                font-size 17px
                font-family: bold
                text-transform uppercase
                padding: 20px 0 0
            p
                font-size 14px
                color c-gris
                font-family: regular
    .content-other-info
        text-align left
        position relative
        margin 0 0 40px 
        .yellow-frame
            background-color c-amarillo
            width 50%
            height 100%
            display inline-block
            position absolute
            top 0
            left 0
        .blue-frame
            background-color c-azul
            width 50%
            height 100%
            display inline-block
            position absolute
            top 0
            right 0
        .mision-side
            background-color c-amarillo
            background-image url("../img/nosotros-01_14.png")
            background-position right 10px center
            background-repeat no-repeat
            position relative
            z-index 10
            padding 40px 100px 30px 0
            text-align left 
            min-height: 150px;
            &:after
                content ""
                width 0
                height 0
                border-bottom 220px solid c-amarillo
                border-right 50px solid transparent
                position absolute
                left 100%
                top 0px
            h3.title
                color c-azul
                font-size 25px
                font-family semibold
                margin 0 0 15px 0
        .vision-side
            background-color c-azul
            background-image url("../img/nosotros-01_11.png")
            background-position left 50px center
            background-repeat no-repeat
            position relative
            z-index 9
            padding 40px 0 30px 140px
            text-align right
            min-height: 150px;
            h3.title
                color c-amarillo
                font-size 25px
                font-family semibold
                margin 0 0 15px 0
        p
            color c-blanco
            font-size 14px
            font-family regular

@media (max-width: 960px)
    .banner-page
        .banner-image
            min-height: auto!important
            height: auto!important
            display inline-block!important
            &:before
                display none
            &:after
                display none
            img
                max-width 100%
    section.info-pages 
        .about-us
            .text-section
                padding 10px
            .image-section
                padding 10px
                img
                    max-width 100%
                    margin 0
        .content-other-info 
            padding 0 0 4px 0
            .mision-side
                &:after
                    display none
            .yellow-frame
                background transparent
            .blue-frame
                background transparent
            .mision-side
                padding 40px 20px
                text-align center
            .vision-side
                padding 40px 20px
                text-align center
                

@media (max-width: 480px)
                
    .banner-page
        .banner-image
            display block!important
            min-height 210px!important
            top 0
            left 0
            position relative
            position relative
            right 80%
            &:before
                display none
            &:after
                display none
            img
                max-width inherit
                position absolute
                right -5%