

header

	height 68px
	.container
		height 100%
		position relative
		display flex
		flex-direction row
		align-items center
		.overlay
			position fixed
			left 0
			top 0
			width 100%
			height 100%
			z-index 120
			display none
			background rgba(0,0,0,0.4)
		.icon-cross.close
			display none
			font-size 44px
			color c-amarillo
			z-index 430
			position fixed
			top 20px
			right 20px
			cursor pointer
			transition 0.5s ease all
		.icon-menu
			background c-amarillo
			border-radius 4px
			display none
			font-size 44px
			cursor pointer
			color c-azul
			font-weight 900
			position fixed
			top 20px
			right 20px
			z-index 130
			transition 0.5s ease all
		.container-log
			display block
			margin 0px
			figure.logo
				position absolute
				left 0px
				top 5px
				display inline-block
				z-index 100
				img
					display block
					width 117px
					height 117px
			figure.logo-text
				color c-azul
				margin 0
				margin-left 125px
				font-size 22px
				font-family bold
				display inline-block
				vertical-align top

		.nav-principal
			display flex

			nav
				height 100%
				margin-left 40px
				ul
					height 100%
					display flex
					align-items center
					li

						display inline-block
						a

							padding 27px 12px
							font-size 18px
							color c-azul
							transition 0.2s ease all
							font-family regular
					li:hover
						a
							color c-blanco
							background c-amarillo
			.container-telephone
				margin-left 40px
				figure
					display inline-block
					vertical-align top
				a
					margin-left 5px
					margin-top 3px
					color c-azul
					font-family bold
					font-size 16px
					display inline-block
					vertical-align top


footer
	.footer-top
		padding 15px 0px
		background c-azul
		.container
			display flex
			justify-content space-between
			h3
				font-size 16px
				font-family bold
				color c-blanco
				margin-bottom 8px
			.redes
				text-align center
				padding-left 35px
				padding-top 5px
				ul
					padding-top 8px
					display flex
					justify-content center
					li
						margin 0px 5px
						a

							font-size 18px
							padding 8px
							border-radius 50%
							color c-azul
							background c-blanco
							transition 0.2s ease all
							&:hover
								color c-blanco
								background c-amarillo
			.cnt-phone
				text-align center
				padding-top 5px
				padding-left 35px
				padding-right 35px
				border-right 1px solid c-plomo
				.text
					display flex
					.icon-icon-phone
						font-size 22px
						color c-amarillo
					a
						margin-left 8px
						font-family bold
						font-size 18px
						color c-blanco
			.cnt-address
				padding-top 5px
				text-align center
				width 202px
				padding-left 35px
				padding-right 35px
				border-right 1px solid c-plomo
				.address
					display flex
					align-items center
					.icon-location
						font-size 22px
						color c-amarillo
					.text
						margin-left 10px
						color c-blanco
						font-family regular
						font-size 14px
						p
							margin 0px
						.location
							font-family bold

			.pages
				display flex
				align-items center
				padding-right 45px
				border-right 1px solid c-plomo
				figure
					margin 0
					margin-right 35px

					img
						display block
				ul
					li:first-child
						margin-top 0px
					li
						margin-top 5px
						a
							color c-blanco
							font-family regular
							font-size 14px
							transition 0.2s ease all
							&:hover
								color c-amarillo
	.footer-bottom
		padding 8px 0px
		text-align center
		h3
			color black
			font-family regular
			font-size 13px
			margin 0px


@media (max-width: 960px)
	header .container
		.res-menu-des
			opacity 0
		.res-active
			display flex !important
		.nav-principal-active
			display flex
			right 0px !important

		.icon-menu
			display block
		.nav-principal

			background c-azul
			padding-top 40px
			height 100%
			z-index 400
			position fixed
			top 0px
			right -100%
			transition 0.5s ease all
			padding-top 80px
			flex-direction column
			width 250px

			.container-telephone
				margin 0
				text-align center
				figure
					display none
				a
					color c-amarillo
					display block
					margin 0px
					padding 10px 0px
					&:hover
						color c-blanco
						background c-amarillo
			nav
				height auto
				margin 0px
				ul
					flex-direction column
					li
						margin 0px
						padding-left 0px
						padding-right 0px
						width 100%
						text-align center
						a

							color c-amarillo
							padding 10px 0px
							display block
	footer .footer-top .container
		flex-wrap wrap
		.pages
			width 49%
			box-sizing border-box
			margin-bottom 20px
			padding-right 25px
		.cnt-address
			width 49%
			padding-left 25px
			padding-right 25px
			box-sizing border-box
			border-right none
			margin-bottom 20px
		.cnt-phone
			width 49%
			padding-left 25px
			padding-right 25px
			box-sizing border-box
		.redes
			width 49%
			box-sizing border-box
			padding-left 25px

@media (max-width: 768px)
	header .container
		.container-log
			figure.logo-text
				margin-left 110px
			figure.logo
				width 100px
				img
					width 100%
					height auto
	footer .footer-top
		.container
			width 96%
			.cnt-phone .text
				.icon-icon-phone
					display none
				a
					margin-left 0px
					margin auto
			.pages
				flex-direction column
			.cnt-address
				.address
					justify-content center
					.icon-location
						display none
			.cnt-phone
				margin-bottom 20px
			.pages, .cnt-address, .cnt-phone, .redes
				border none
				padding 0px 0px
				width 100%
				justify-content center
				figure
					margin 0px
				ul
					display flex
					li:first-child
						margin-top 10px
					li
						margin 0px
						margin 10px 10px
@media (max-width: 480px)
	header .container
		.container-log
			figure.logo-text
				width 120px
				img
					width 100%
					height auto
